@model PupperMvc.Models.Doggo;

<h1>Edit Doggo</h1>

@using (Html.BeginForm())
{
  @Html.Label("Name")
  @Html.TextBoxFor(model => model.Name)
  <br>
  @Html.Label("Age")
  @Html.TextBoxFor(model => model.Age, new {type="number", min="0", max="29"})
  <br>
  @Html.Label("Breed")
  @Html.TextBoxFor(model => model.Breed)
  <br>
  @Html.Label("Gender")
  @Html.TextBoxFor(model => model.Gender)
  <br>
  @Html.Label("Picture URL")
  @Html.TextBoxFor(model => model.PicUrl)
  <br>
  <input type="submit" value="Edit Doggo">
}

@Html.ActionLink("Back", "Details", new { id = Model.DoggoId} )

